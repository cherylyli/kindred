<% include partials/header %>
  <link rel="stylesheet" type="text/css" href="/css/signup.css">

    <div class="wrapper">
		<h1>Login</h1>
		<form method="GET">
			Username: <input type="text" name="name" placeholder="name">
			Password: <input type="password" name="password" placeholder="password">
			<button type="submit">Go!</button>
		</form>

		<h1>Sign Up</h1>
		<form method="POST" class="signup">
			Create a new username: <input type="text" name="name" placeholder="John"><br>
			Choose a password: <input type="password" name="password" placeholder="password"><br>
			Enter your email: <input type="email" name="email" placeholder="john@abc.com">
		</form>

	</div>

<% include partials/footer %>